doctype html
html
    block head
        head
            title= title
            meta(http-equiv='Content-Type', content='text/html', charset='UTF-8')
            meta(name='description', content='admin voor roc esports')
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            meta(name='google-signin-client_id', content='208491198563-1efffitibhbqkb7sggbhdfklqqin8g0r.apps.googleusercontent.com')
            block scripts
                script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
                script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js')
                script(src='/javascripts/script.js')
                script(src='https://apis.google.com/js/platform.js', async, defer)
            block stylesheets
                link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
                link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
                link(rel='stylesheet', href='/stylesheets/style.css')

    body
        block navbar
            .navbar.navbar-default
                .container
                    block navbar-header
                        .navbar-header
                            .navbar-brand E-sports
                    block navbar-list
                        ul.nav.navbar-nav
                            li
                                a(href="/tournaments") Tournaments
                    block navbar-profile
                        p.navbar-text.navbar-right
                            if profile
                                if profile.image
                                    img.img-circle(src=profile.image, width=24)
                                span #{profile.displayName} &nbsp;
                                    a(href=logout) (logout)
                            else
                                a(href=login) Login

        block content