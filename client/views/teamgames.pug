extends layout.pug

block content
    .container.content
        .col-md-8
            .col-md-12
                .well.bs-component
                    form.form-horizontal(method='GET' action='/createteam')
                        fieldset
                            legend Create Team
                            .form-group
                                label.col-md-4(for='game') Game:
                                .col-md-8
                                    select#game(name='game' required)
                                        each gm in games
                                            option(value=gm.id) #{gm.name}
                            .form-group
                                .col-md-4
                                .col-md-8
                                    button#choose-game.btn.btn-success(type="submit") choose game
